@model List<CheeseMVC.Models.Menu>

<h1>@ViewBag.Title</h1>

<table class="table">

    @foreach (var menu in Model)
    {
        <tr>
            <td><a asp-controller="Menu" asp-action="ViewMenu" asp-route-id=@menu.ID>@menu.Name</a></td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No menus yet!</p>
}

<p><a asp-controller="Menu" asp-action="Add">Add New Menu</a></p>
