@model List<CheeseMVC.Models.CheeseMenu>

<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>MenuID</th>
        <th>Menu</th>
        <td>CheeseID</td>
        <td>Cheese</td>
    </tr>

    @foreach (var menu in Model)
    {
        <tr>
            <td asp-controller="Menu" asp-action="ViewMenu" asp-rout-@MenuID>@menu.Menu</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No menus yet!</p>
}

<p><a asp-controller="Menu" asp-action="Add">Add New Menu</a></p>
